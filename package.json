{
  "name": "psc-pane",
  "author": "Antti Holvikari <anttih@gmail.com>",
  "license": "LGPL-3.0",
  "version": "3.0.0",
  "description": "Auto reloading PureScript compiler",
  "main": "psc-pane.js",
  "repository": "https://github.com/anttih/psc-pane",
  "bin": {
    "psc-pane": "index.js"
  },
  "scripts": {
    "compile": "psc-package build",
    "bundle": "purs bundle \"output/*/*.js\" --output psc-pane.js --module PscPane.Main --main PscPane.Main",
    "psc-pane": "npm run build && ./index.js -t",
    "build": "npm run compile && npm run bundle",
    "prepublish": "psc-package install && npm run build"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "blessed": "0.1.81",
    "minimatch": "3.0.3",
    "watchpack": "1.1.0",
    "yargs": "4.7.0"
  },
  "devDependencies": {
    "purescript": "^0.12.0"
  }
}
